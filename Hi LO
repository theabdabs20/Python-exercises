import random, os,sys, msvcrt

class Player:
    def getPlayer(self):
        name = str(input("Please enter your name here: "))
        print("Welcome to our little game %s" % name)
        age = int(input("Please enter your age here: "))
        if age < 18:
            print("You are too young to gamble, please press any key to exit.")
            exit()
        else:
            print("Welcome to the game. Let's gamble.")

player1 = Player()
player1.getPlayer()
x = random.randint(1,9)
print(x)

class TakeGuess:
    def takingGuess(self):
        guessList = ("Low", "low", "L", "l","High","high","H", "h")
        guess = str(input("Please make your guess: "))
        guess = guessList
        while guess not in guessList:
            print("You have entered a wrong command. Here is the available commands.")
            print(guessList)
            str(input("Make your guess from the available commands: "))
        else:
            print("You have guessed: "+str(input()))


guess = TakeGuess()
guessList = TakeGuess()
guess.takingGuess()
